
<h1> Create Post </h1>

<%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author%>
<br>
<br>
  <%= f.label :content %>
  <%= f.text_area :content, :cols => "50", :rows => "20" %>
<br>
<br>


  <%= f.submit "Create Post" %>

<% end %>
